<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- 相当于padding -->
            <item android:left="4dp" android:top="4dp">
                <shape>
                    <solid android:color="#ff58bb52" />
                    <corners android:radius="30dip"/>
                    <size
                        android:width="64dp"
                        android:height="64dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW LAYER -->
            <item android:left="1dp" android:top="1dp" >
                <shape>
                    <solid android:color="#0F000000" />
                    <corners android:radius="32dp"/>
                    <size
                        android:width="64dp"
                        android:height="64dp"/>
                </shape>
            </item>
            <!-- CONTENT LAYER -->
            <!-- 相当于padding -->
            <item android:bottom="1dp" android:right="1dp" android:left="2dp" android:top="2dp">
                <shape>
                    <solid android:color="@color/transparent" />
                    <corners android:radius="32dp"/>
                    <size
                        android:width="64dp"
                        android:height="64dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>