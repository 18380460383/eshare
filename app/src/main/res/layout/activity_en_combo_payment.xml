<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="16">
    <include
        android:id="@+id/en_payment_title"
        layout="@layout/e_title"
        style="@style/TitleStyle"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/body_wigth">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/write"
                android:padding="@dimen/left_right_retract_small"
                android:orientation="horizontal">
                <com.cardholder.adwlf.view.XCRoundRectImageView
                    android:id="@+id/combo_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ic_launcher"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/left_right_retract_small"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/combo_title"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="噶事丢分后爱上"
                            android:textSize="16dp"
                            android:textColor="@color/text_hei"/>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/combo_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="垃圾都是佛改煎熬时间大佛改加速度计佛撒旦教欧风街"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/left_right_retract_small">
                        <TextView
                            android:id="@+id/original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥200.00"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/combo_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/original_price"
                            android:text="￥200.00"
                            android:textSize="16dp"
                            android:textColor="@color/red"/>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:background="@color/screen_default_gray"/>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:background="@color/write">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/left_right_retract_small"
                android:textSize="16dp"
                android:textColor="@color/text_hei"
                android:text="应支付"/>
                <TextView
                android:id="@+id/play_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/left_right_retract_small"
                android:layout_alignParentRight="true"
                android:textSize="16dp"
                android:textColor="@color/orange"
                android:text="￥666.00"/>
        </RelativeLayout>
            <TextView
                style="@style/halving_line_e"
                android:layout_height="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/write"
                android:padding="@dimen/left_right_retract_small"
                android:layout_marginLeft="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/alipay"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hei"
                    android:textSize="16dp"
                    android:layout_marginLeft="@dimen/left_right_retract_small"
                    android:text="支付宝"/>
                <ImageView
                    android:id="@+id/image_alipy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/option"/>
            </LinearLayout>
            <TextView
                style="@style/halving_line_e"
                android:layout_marginLeft="@dimen/left_right_retract_small"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/write"
                android:padding="@dimen/left_right_retract_small"
                android:layout_marginLeft="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/wechat"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hei"
                    android:textSize="16dp"
                    android:layout_marginLeft="@dimen/left_right_retract_small"
                    android:text="微信"/>
                <ImageView
                    android:id="@+id/image_weixin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/option"/>
            </LinearLayout>
            <TextView
                style="@style/halving_line_e"
                android:layout_marginLeft="@dimen/left_right_retract_small"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/write"
                android:padding="@dimen/left_right_retract_small"
                android:layout_marginLeft="4dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/balance_play"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hei"
                    android:textSize="16dp"
                    android:layout_marginLeft="@dimen/left_right_retract_small"
                    android:text="余额"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                 android:textSize="13dp"
                    android:text="可用余额:"/>
            <TextView
                android:id="@+id/balance"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:layout_marginLeft="8dp"
                android:textSize="12dp"/>
                <ImageView
                    android:id="@+id/image_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/option"/>
            </LinearLayout>
            <TextView
                android:id="@+id/go_payment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="@color/write"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="@dimen/left_right_retract_small"
                android:layout_marginRight="@dimen/left_right_retract_small"
                android:background="@drawable/select_log_button"
                android:text="立即付款"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
