<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kzmen.sczxjf.ui.activity.kzmessage.AccountMessageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/account_seting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账号ID" />

        <TextView
            android:id="@+id/tv_account_id"
            style="@style/account_seting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="5242884" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/account_seting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="真实姓名" />

        <TextView
            android:id="@+id/tv_real_name"
            style="@style/account_seting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="测试" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/account_seting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定手机" />

        <TextView
            android:id="@+id/tv_bind_phone"
            style="@style/account_seting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="138 0034 0034" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_get_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/account_seting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提取现金" />

        <TextView
            android:id="@+id/tv_get_money"
            style="@style/account_seting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="4444" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_save_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/account_seting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计收益" />

        <TextView
            android:id="@+id/tv_save_money"
            style="@style/account_seting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="4444" />
    </LinearLayout>
</LinearLayout>
