<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="16"
    android:background="@color/write"
    android:orientation="vertical">
    <include
        android:id="@+id/combo_de_title"
        layout="@layout/e_title"
        style="@style/TitleStyle"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/body_wigth"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/screen_default_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/combo_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="@dimen/left_right_retract_small"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/left_right_retract_small"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">
                    <TextView
                        android:id="@+id/combo_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="16dp"
                        android:textColor="@color/text_hei"/>
                    <TextView
                        android:id="@+id/combo_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/left_right_retract_small">
                        <TextView
                            android:id="@+id/original_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"/>
                        <TextView
                            android:id="@+id/combo_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/original_price"
                            android:textSize="16dp"
                            android:textColor="@color/red"/>
                        <TextView
                            android:id="@+id/combo_handle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/combo_price"
                            android:textSize="14dp"
                            android:layout_toRightOf="@+id/combo_price"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="@dimen/left_right_retract_small"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/smarttablayout_super"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:layout_weight="1">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#f9f9f9">
                    <RadioButton
                        android:id="@+id/radiobutton_all"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/radiobutton_1"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/left_right_retract_small"
                        android:checked="true"
                        android:text="套餐详情"/>
                    <RadioButton
                        android:id="@+id/radiobutton_best"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="1dp"
                        android:gravity="center"
                        android:padding="@dimen/left_right_retract_small"
                        android:button="@null"
                        android:textColor="@color/en_de_textview"
                        android:background="@drawable/radiobutton_1"
                        android:text="效果展示"/>
                </RadioGroup>
                <FrameLayout
                    android:id="@+id/fragment_fl"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                </FrameLayout>
                <TextView
                    android:id="@+id/snapped_up_immediately"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/left_right_retract_small"
                    android:textSize="20dp"
                    android:background="@color/red"
                    android:textColor="@color/write"
                    android:text="立即抢购"/>
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
