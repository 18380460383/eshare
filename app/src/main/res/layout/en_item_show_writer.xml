<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="4dp"
    android:paddingRight="@dimen/left_right_retract_small"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:weightSum="14"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/write">

    <RelativeLayout
        android:layout_weight="4"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_avatar_load"
            android:scaleType="centerInside"
            android:layout_width="70dp"
            android:layout_centerInParent="true"
            android:layout_height="70dp" />
        <com.jiebian.adwlf.view.XCRoundRectImageView
            android:id="@+id/iv_avatar"
            android:scaleType="fitXY"
            android:layout_width="70dp"
            android:src="@mipmap/image_def"
            android:layout_centerInParent="true"
            android:layout_height="70dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_weight="10"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:singleLine="true"
                android:id="@+id/tv_1"
                android:textColor="@color/text_hei"
                android:textSize="13sp"
                android:text="腾讯"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_weight="1"
                android:singleLine="true"

                android:id="@+id/tv_2"
                android:textSize="10sp"
                android:layout_marginLeft="8dp"
                android:text="新闻"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_marginRight="20dp"
                android:text="￥200~300"
                android:textColor="@color/orange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:id="@+id/tv_3"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="11sp"
                android:text="互谅网"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckBox
                android:focusable="false"
                android:id="@+id/cb_choose"
                android:background="@drawable/selector_e_show_check"
                android:button="@null"
                android:layout_width="26dp"
                android:layout_height="26dp" />

        </LinearLayout>



        <LinearLayout
            android:layout_margin="2dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_7"
                android:textSize="12sp"
                android:text="推荐指数"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/rating"
                android:progressDrawable="@drawable/food_rating_bar_full"
                android:layout_toRightOf="@+id/hint_ratin_textview"
                android:layout_marginLeft="8dp"
                android:numStars="5"
                android:rating="3"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
