<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="16"
    android:orientation="vertical">
    <include
        style="@style/TitleStyle"
        layout="@layout/e_title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/body_wigth">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
               style="@style/enterprise_place_an_order_need_textview"
                android:text="文章标题"/>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/drawable_edittext"
                android:layout_height="100dp"
                android:gravity="start"
                android:padding="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textSize="13dp"
                android:hint="请在此输入你的文章标题(30字以内哦~)"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/enterprise_place_an_order_need_textview"
                        android:text="字数要求"/>
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="12dp"
                        android:background="@drawable/drawable_edittext"
                        android:layout_weight="1">

                    </Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        style="@style/enterprise_place_an_order_need_textview"
                        android:text="字数要求"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <EditText
                            style="@style/enterprise_place_an_order_need_edittext"
                            android:hint="请选择日期"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/icon_topn"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"/>
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
            <TextView
                style="@style/enterprise_place_an_order_need_textview"
                android:text="创作要求"/>
            <EditText
                android:layout_width="match_parent"
                android:background="@drawable/drawable_edittext"
                android:layout_height="200dp"
                android:gravity="start"
                android:padding="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:textSize="13dp"
                android:hint="请在此输入你的文章标题(30字以内哦~)"
                android:layout_marginBottom="90dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:weightSum="5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:textColor="#ffffff"
                    android:background="#33323A"
                    android:gravity="center"
                    android:text="共计：￥300.00"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:textSize="13dp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:background="@color/orange"
                    android:text="加入购物车"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
