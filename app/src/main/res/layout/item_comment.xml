<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <com.cardholder.adwlf.view.RoundImageView
                android:id="@+id/item_comment_head_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="@dimen/left_right_retract_small"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/item_comment_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:textColor="@color/text_hei"
                        android:text="小王子"/>
                    <TextView
                        android:id="@+id/item_comment_option"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/item_comment_name"
                        android:layout_alignTop="@+id/item_comment_name"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textColor="@color/write"
                        android:textSize="10dp"
                        android:text="A观点"/>
                    <TextView
                        android:id="@+id/item_comment_floor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="1楼"
                        android:layout_marginTop="14dp"
                        android:layout_marginRight="@dimen/left_right_retract_small"
                        android:textSize="14dp"/>
                </RelativeLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/item_comment_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2016-4-15 18:11"
                            android:textSize="12dp"/>

                        <TextView
                            android:id="@+id/item_comment_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:textSize="14dp"
                            android:minLines="3"
                            android:layout_marginRight="@dimen/left_right_retract_small"
                            android:textColor="@color/text_hei"
                            android:text="软件的风景为爱个痘痘就是佛降温哦按非欧ID时间佛撒娇二佛9坚实的烦恼解释道佛你就是几点睡佛你就是电视机佛山"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/comment_bestc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="@dimen/left_right_retract_small"
                        android:scaleType="center"
                        android:src="@mipmap/bestc"/>
                </FrameLayout>


            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="12dp"
            style="@style/halving_line_e" />
        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">
            <ImageView
                android:id="@+id/item_comment_jubao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_in_report"
                android:layout_marginRight="4dp"
                android:padding="8dp"
                android:layout_alignParentRight="true"/>
            <ImageView
                android:id="@+id/item_comment_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_in_share"
                android:layout_marginRight="26dp"
                android:padding="8dp"
                android:layout_toLeftOf="@+id/item_comment_jubao"/>
            <ImageView
                android:id="@+id/item_comment_correlation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_in_a"
                android:layout_marginRight="26dp"
                android:padding="8dp"
                android:layout_toLeftOf="@+id/item_comment_share"/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/item_comment_zhannum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/item_comment_correlation"
                android:layout_marginRight="26dp"
                android:gravity="center"
                android:textSize="12dp"
                android:text="999"/>
            <ImageView
                android:id="@+id/item_comment_zhichi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/in_press_like"
                android:padding="8dp"
                android:layout_toLeftOf="@+id/item_comment_zhannum"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
