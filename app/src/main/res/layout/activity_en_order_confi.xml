<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="16">
    <include
        android:id="@+id/en_order_confi_title"
        layout="@layout/e_title"
        style="@style/TitleStyle"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/body_wigth">

        <LinearLayout
            android:id="@+id/menu_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/title_hei"
                android:gravity="center_vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/write"
                    android:textSize="13dp"
                    android:text="需要支付：¥"/>
                <TextView
                    android:id="@+id/all_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:layout_marginLeft="1px"
                    android:textColor="@color/write"
                    android:text="1000000.00"/>
            </LinearLayout>
            <TextView
                android:id="@+id/to_play"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:gravity="center_vertical"
                android:textColor="@color/write"
                android:background="@color/orange"
                android:textSize="16dp"
                android:text="去结算"/>
        </LinearLayout>
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/shop_car_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/screen_default_gray"
            android:layout_above="@+id/menu_ll"/>
    </RelativeLayout>

</LinearLayout>
