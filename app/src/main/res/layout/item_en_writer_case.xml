<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/write"
    android:orientation="horizontal"
    android:weightSum="5">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1.5"
    android:orientation="horizontal"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/topwgittext"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/image_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@mipmap/shoubiao"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="8dp"/>
            <TextView
                android:id="@+id/writer_create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016.4.12"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/image_1"
                android:textSize="8dp"/>

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6.7"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="26dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/shagnxuxian"
            android:layout_width="3dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            android:background="@color/halving_line"/>
        <ImageView
            android:id="@+id/iv_quan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/drawable_hei_spot"/>
        <TextView
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:layout_weight="6.7"
            android:layout_marginTop="4dp"
        android:background="@color/halving_line"/>
    </LinearLayout>



</LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3.5"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/left_right_listview_item_small"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bac_w">
            <TextView
                android:id="@+id/writer_manuscript_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/left_right_retract_small"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:layout_marginTop="@dimen/left_right_retract_small"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/orange"
                android:textSize="15dp"
                android:text="这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题这是标题"/>
            <TextView
                android:id="@+id/writer_case_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="3dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="@dimen/left_right_retract_small"
                android:text="拉萨的恢复辣椒干法及欧普阿拉斯加开发商的佛教撒娇的佛个按实际欧风街了马尔扫皮肤及哦啊解剖附件金佛那是的奇偶付家坡三大块的房间爱手动"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>