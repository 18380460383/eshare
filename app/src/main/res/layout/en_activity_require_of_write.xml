<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="16"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        style="@style/TitleStyle"
        layout="@layout/e_title" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/body_wigth"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            style="@style/body_wigth">
            <LinearLayout
                android:layout_weight="14.5"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    style="@style/En_TextView"
                    android:text="文章标题" />

                <EditText
                    android:id="@+id/write_article_title"
                    android:padding="6dp"
                    android:gravity="top"
                    android:hint="请在此处输入文章标题（30个字以内哦）"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/shape_e_et_gray"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/ly_require_count"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/En_TextView"
                            android:text="字数要求"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:id="@+id/write_article_number_of_words"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/shape_e_et_gray"
                                android:spinnerMode="dialog"
                                android:paddingLeft="1dp"
                                android:paddingTop="1dp"
                                android:paddingRight="1dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="24dp"
                                android:src="@mipmap/unfold"/>
                        </RelativeLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/En_TextView"
                            android:text="截稿日期"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/write_closing_date"
                            android:drawableRight="@mipmap/icon_e_calendar"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:padding="12dp"
                            android:text="2016-5-1"
                            android:background="@drawable/shape_e_et_gray"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    style="@style/En_TextView"
                    android:text="创作要求"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/write_article_required"
                    android:layout_width="match_parent"
                    android:background="@drawable/shape_e_et_gray"
                    android:layout_height="240dp"
                    android:textSize="13dp"
                    android:padding="10dp"
                    android:gravity="left"
                    android:textColor="@color/item_textview_gray"
                    android:layout_marginLeft="@dimen/left_right_retract_small"
                    android:layout_marginRight="@dimen/left_right_retract_small"/>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/write_all_money"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:gravity="center"
                android:background="#333239"
                android:text="共计: ¥ 8888"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/write_add_car"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="加入购物车"
                android:padding="12dp"
                android:background="@color/orange"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
