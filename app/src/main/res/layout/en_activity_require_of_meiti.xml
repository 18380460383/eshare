<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="16"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        style="@style/TitleStyle"
        layout="@layout/e_title" />
    <LinearLayout
        android:layout_weight="14.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="投放时间"
            style="@style/En_TextView"/>
        <EditText
            android:drawableRight="@mipmap/icon_e_calendar"
            android:hint="选择发布时间"
            style="@style/En_EditText" />

        <TextView
            android:text="发布标题"
            style="@style/En_TextView"/>
        <EditText
            android:hint="请填写文章标题"
            style="@style/En_EditText" />

        <TextView
            android:text="关键字"
            style="@style/En_TextView"/>
        <EditText
            android:hint="请填写关键字"
            style="@style/En_EditText" />

        <TextView
            android:text="添加链接地址"
            style="@style/En_TextView"/>
        <EditText
            android:hint="请粘贴或输入链接地址"
            style="@style/En_EditText" />

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:text="创建网页链接"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:weightSum="5"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:gravity="center"
                android:background="#333239"
                android:text="共计: $ 8888"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textColor="@android:color/white"
                android:text="加入购物车"
                android:padding="12dp"
                android:background="@color/orange"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
