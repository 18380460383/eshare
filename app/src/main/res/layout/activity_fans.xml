<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="16">
    <RelativeLayout
        style="@style/TitleStyle">
        <include
            android:id="@+id/fans_title"
            layout="@layout/e_title"
            />
        <TextView
            android:id="@+id/yaoqing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邀请"
            android:textSize="18dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textColor="@color/write"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/body_wigth">
        <RelativeLayout
            android:id="@+id/share_frinde_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="#ffffff">
            <ImageView
                android:id="@+id/share_friends_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/share_friend"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                />
            <TextView
                android:id="@+id/share_frindes_hint"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/share_friends_iv"
                android:gravity="center"
                android:textColor="#B9B9B9"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fans_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#FE9C3C"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:text="好友数:"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.handmark.pulltorefresh.library.PullToRefreshListView
                    android:id="@+id/fans_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#00000000"
                    android:scrollbars="none"
                    android:dividerHeight="0px"/>
                <ListView
                    android:id="@+id/e_fans_letter"
                    android:layout_width="25dp"
                    android:scrollbars="none"
                    android:divider="@null"
                    android:background="#00000000"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
