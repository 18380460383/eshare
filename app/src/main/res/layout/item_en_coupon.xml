<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/coupon_bg"
    android:paddingBottom="20dp"
    android:orientation="vertical"
    android:paddingTop="26dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <TextView
                android:id="@+id/money_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textSize="13dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/write"
                android:layout_alignBaseline="@+id/coupon_mongy"/>
            <TextView
                android:id="@+id/coupon_mongy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000000"
                android:textSize="24dp"
                android:textColor="@color/write"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/money_hint"/>
            <TextView
                android:id="@+id/coupon_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单满两百可用"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/write"
                android:layout_toRightOf="@+id/coupon_mongy"
                android:layout_alignBaseline="@+id/coupon_mongy"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:visibility="gone"
            android:layout_marginRight="@dimen/left_right_retract_small"
            android:src="@mipmap/option_coupon"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/time_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期："
                android:textSize="16dp"
                android:textColor="@color/write"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/coupon_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/write"
                android:text="5246546544646464"
                android:layout_toRightOf="@+id/time_hint"/>
    </LinearLayout>

</LinearLayout>
