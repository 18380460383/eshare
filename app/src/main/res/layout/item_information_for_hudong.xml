<?xml version="1.0" encoding="utf-8"?>
<!--宽高比750.240-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/write"
    android:layout_height="240dp">

    <ImageView
        android:id="@+id/hudong_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:scaleType="fitXY"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/jianbian"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical|right">
        <ImageView
            android:id="@+id/hudong_type_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/h_feng"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/hudong_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/orange"
            android:layout_marginLeft="8dp"
            android:textSize="10dp"
            android:shadowColor="@color/umeng_fb_secondary_text_light"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="5"
            android:text="50积分"/>
    </LinearLayout>

    <TextView
        android:id="@+id/hudong_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="福利来袭，企业福利等你拿发生的范围是打发大法师"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="@dimen/left_right_retract_small"
        android:shadowColor="@color/umeng_fb_secondary_text_light"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="5"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginBottom="1dp"
        android:layout_above="@+id/rld"/>
    <RelativeLayout
        android:id="@+id/rld"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="11dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/item_information_for_hudong_share_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:src="@mipmap/home_f_share"/>
        <TextView
            android:id="@+id/item_information_for_hudong_share_tv"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_information_for_hudong_share_iv"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="5"/>


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:background="@color/halving_line"/>
</RelativeLayout>
