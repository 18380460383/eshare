<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="#ffffff">
    <LinearLayout
        android:id="@+id/item_user_spoor_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/item_user_spoor_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/left_right_retract_small"
                android:src="@mipmap/wechat"/>
            <TextView
                android:id="@+id/item_user_spoor_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/item_user_spoor_image"
                android:layout_marginTop="@dimen/left_right_retract_small"
                android:text="2016年4月15号 10:23"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_user_spoor_time"
                android:layout_alignLeft="@+id/item_user_spoor_time"
                android:layout_marginTop="@dimen/left_right_retract_small"
                android:textSize="18dp"
                android:text="评论了上搭建费是哦的风景"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/item_user_spoor_delete"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:background="#FE5A5A"
            android:scaleType="center"/>
    </LinearLayout>


</LinearLayout>
