<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="16"
    android:background="@color/bg_en"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:id="@+id/en_login_title"
        style="@style/TitleStyle"
        layout="@layout/e_title" />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="14.5">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:paddingTop="18dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:background="@mipmap/icon_e_login_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:textSize="22sp"
                    android:textColor="@color/orange"
                    android:text="企业账号登录"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <EditText
                    android:hint="请输入企业账号"
                    android:id="@+id/et_account"
                    android:singleLine="true"
                    android:layout_marginBottom="10dp"
                    android:drawablePadding="14dp"
                    android:paddingLeft="12dp"
                    android:textColor="@android:color/black"
                    android:drawableLeft="@mipmap/icon_login_account"
                    android:background="@drawable/shape_e_et_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <EditText
                    android:hint="请输入密码"
                    android:id="@+id/et_password"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:drawablePadding="14dp"

                    android:paddingLeft="12dp"
                    android:textColor="@android:color/black"
                    android:drawableLeft="@mipmap/icon_e_login_password"
                    android:background="@drawable/shape_e_et_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/tv_login"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/white"
                    android:padding="14dp"
                    android:text="登  录"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:background="@drawable/selector_e_tv_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_forget"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="40dp"
                    android:textSize="15sp"
                    android:layout_alignParentBottom="true"
                    android:text="忘记密码?"
                    android:textColor="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_register"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="30dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:background="@drawable/shape_e_et_orge"
                    android:layout_alignParentRight="true"
                    android:textSize="15sp"
                    android:layout_below="@id/tv_login"
                    android:text="新建企业账号"
                    android:textColor="@color/orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="使用本产品及代表同意[界变]"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_service"
                        android:textColor="@color/orange"
                        android:text="服务条款"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="和"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_private"
                        android:textColor="@color/orange"
                        android:text="隐私条款"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/bangding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/write">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/interflow_hint"
                android:src="@mipmap/interflow"/>
            <TextView
                android:id="@+id/interflow_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="16dp"
                android:padding="@dimen/left_right_retract_small"
                android:layout_centerInParent="true"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/interflow_hint"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/quxiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:layout_marginRight="@dimen/left_right_retract_small"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:textColor="@color/orange"
                    android:background="@drawable/drawable_huang_kuang"
                    android:text="取消"/>
                <TextView
                    android:id="@+id/queding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17dp"
                    android:background="@drawable/drawable_huang_button"
                    android:textColor="@color/write"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:text="确定"/>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>



</LinearLayout>
