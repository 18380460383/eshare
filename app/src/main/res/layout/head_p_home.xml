<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/original_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/original_type"
            android:gravity="center_horizontal"
            android:padding="@dimen/left_right_retract_small"
            android:text="原创"
            android:textColor="@color/text_hei"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/point_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/point_type"
            android:gravity="center_horizontal"
            android:padding="@dimen/left_right_retract_small"
            android:text="原创"
            android:textColor="@color/text_hei"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/video_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/video_type"
            android:gravity="center_horizontal"
            android:padding="@dimen/left_right_retract_small"
            android:text="原创"
            android:textColor="@color/text_hei"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/data_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/data_type"
            android:gravity="center_horizontal"
            android:padding="@dimen/left_right_retract_small"
            android:text="原创"
            android:textColor="@color/text_hei"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/act_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="6dp"
            android:drawableTop="@mipmap/act_type"
            android:gravity="center_horizontal"
            android:padding="@dimen/left_right_retract_small"
            android:text="原创"
            android:textColor="@color/text_hei"
            android:textSize="13dp" />
    </LinearLayout>

</LinearLayout>
