<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/left_right_retract_small"
        android:paddingRight="@dimen/left_right_retract_small"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@color/write">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："/>
        <TextView
            android:id="@+id/reporter_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text=".243514316341634"/>
        <TextView
            android:id="@+id/reporter_order_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="12dp"
            android:text="20160405"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:gravity="center_vertical">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/left_right_retract_small"
            android:src="@mipmap/icon_e_home_find_reporter"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="活动名称："
                    android:textSize="13dp"/>
                <TextView
                    android:id="@+id/order_activity_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="13dp"
                android:text="拉克丝大部分空间的三分对方能杀掉你烦死你打发"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:text="记者："/>
                <TextView
                    android:id="@+id/order_reporter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                    android:singleLine="true"
                android:ellipsize="end"
                android:textSize="13dp"
                android:layout_marginTop="2dp"
                android:text="打法是否，阿斯蒂芬，说过的身份GV"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:text="时间："/>
                <TextView
                    android:id="@+id/order_activity_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:text="2016-04-02"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:text="地点："/>
                <TextView
                    android:id="@+id/order_activity_adresse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="13dp"
                    android:layout_marginTop="2dp"
                    android:text="媒体：丝大部分空间的三分对方能杀掉你烦死你打发"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <TextView
        style="@style/halving_line_e"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/left_right_listview_item_small"
        android:layout_marginRight="@dimen/left_right_listview_item_small"
        android:layout_marginTop="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="@dimen/left_right_retract_small"
        android:paddingLeft="@dimen/left_right_retract_small">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="共计："/>
        <TextView
            android:id="@+id/reporter_medial_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:textColor="@color/en_order_m_money"
            android:text="¥200.00"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/reporter_medial_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/left_right_retract_small"
            android:paddingRight="@dimen/left_right_retract_small"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:textSize="12dp"
            android:layout_marginRight="4dp"
            android:text="取消"/>
        <TextView
            android:id="@+id/reporter_play_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_huang_button"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textColor="@color/write"
            android:textSize="11dp"
            android:gravity="center"
            android:text="确认付款"/>
    </LinearLayout>
</LinearLayout>
