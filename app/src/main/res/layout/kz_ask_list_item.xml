<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <TextView
                android:id="@+id/tv_answer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回答人的名字" />

            <ImageView
                android:id="@+id/iv_answer_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_answer_name"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_play_message" />

            <TextView
                android:id="@+id/tv_answer_time_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_answer_state"
                android:layout_marginTop="10dp"
                android:text="剩余24小时" />

            <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/tv_answer_read_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_answer_state"
                android:layout_marginTop="10dp"
                android:text="3人查看" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#E3E8EE" />
</LinearLayout>