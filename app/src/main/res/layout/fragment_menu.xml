<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:paddingRight="15dp">

                    <ImageView
                        android:id="@+id/iv_close"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/close" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/cricle_background"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/c_menu_user_head_iv"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp">

                    <TextView
                        android:id="@+id/c_menu_user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxEms="6"
                        android:text="彭假家"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/c_menu_user_landing_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:text="连续登陆：27天"
                        android:textSize="14dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="20dp"
                    android:background="#F2F2F2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/c_menu_user_name_tv"
                    android:layout_toRightOf="@+id/c_menu_user_name_tv"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/c_menu_attestation_mark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:layout_marginLeft="4dp"
                        android:background="@drawable/shape_orange_tv"
                        android:padding="1px"
                        android:text="已认证"
                        android:textColor="#ffffff"
                        android:textSize="7dp" />

                    <TextView
                        android:id="@+id/c_menu_attestation_mark_for_e"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:background="@mipmap/icon_avatar_inter" />

                    <TextView
                        android:id="@+id/c_menu_attestation_mark_for_m"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="4dp"
                        android:background="@mipmap/icon_avatar_media" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/c_menu_caifu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/c_menu_user_landing_num_tv"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/leftbar_fen" />

                    <TextView
                        android:id="@+id/c_menu_integral"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginLeft="32dp"
                        android:src="@mipmap/leftbar_money" />

                    <TextView
                        android:id="@+id/c_menu_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0.00"
                        android:textColor="#ffffff"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <LinearLayout
                        android:id="@+id/ll_jifen"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ssdk_oks_classic_qzone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="积分" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="4396" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_package"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/ssdk_oks_classic_qzone" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="钱包" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="4396" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/c_menu_caifu"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="#F2F2F2" />

                <RelativeLayout
                    android:id="@+id/c_menu_collect_onc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_c_menu"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/c_menu_collect"
                        android:scaleType="centerInside"
                        android:src="@mipmap/leftbar_collect" />

                    <TextView
                        android:id="@+id/c_menu_collect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/c_menu_collect_vstr"
                        android:textColor="#A3A3A3"
                        android:textSize="18dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/c_menu_friend_onc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_c_menu">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/c_menu_friend"
                        android:scaleType="centerInside"
                        android:src="@mipmap/leftbar_friend" />

                    <TextView
                        android:id="@+id/c_menu_friend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/c_menu_withdraw_friend_vstr"
                        android:textColor="#A3A3A3"
                        android:textSize="18dp" />
                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/c_menu_activity_onc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_c_menu">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/c_menu_activity"
                        android:scaleType="centerInside"
                        android:src="@mipmap/leftbar_activity" />

                    <TextView
                        android:id="@+id/c_menu_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/c_menu_withdraw_activity_vstr"
                        android:textColor="#A3A3A3"
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/c_menu_credits_exchange_onc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_c_menu">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/c_menu_credits_exchange"
                        android:scaleType="centerInside"
                        android:src="@mipmap/leftbar_credits_exchange" />

                    <TextView
                        android:id="@+id/c_menu_credits_exchange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="@string/c_menu_withdraw_credits_exchange_vstr"
                        android:textColor="#A3A3A3"
                        android:textSize="18dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/c_menu_creative_collection_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/select_c_menu">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/c_menu_creative_collection"
                        android:scaleType="centerInside"
                        android:src="@mipmap/creative_collection" />

                    <TextView
                        android:id="@+id/c_menu_creative_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="创意征集"
                        android:textColor="#A3A3A3"
                        android:textSize="18dp" />
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="30dp"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/c_menu_setting_onc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/leftbar_setting" />

            <TextView
                android:id="@+id/c_menu_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/c_menu_setting_vstr"
                android:textColor="#A3A3A3"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/c_menu_feedback_onc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@mipmap/leftbar_feedback" />

            <TextView
                android:id="@+id/c_menu_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:text="@string/c_menu_feedback_vstr"
                android:textColor="#A3A3A3"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
