<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="16"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <include
        android:id="@+id/addtext_title"
        style="@style/TitleStyle"
        layout="@layout/e_title"/>
    <LinearLayout
        android:orientation="vertical"
        style="@style/body_wigth"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <RelativeLayout
            android:layout_margin="15dp"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/publish_text"
            android:padding="1dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:background="#ffffff"
                android:textColor="@color/default_text"
                android:gravity="top"
                android:id="@+id/activity_addtext_et_text"
                />
        </RelativeLayout>
        <GridView
            android:layout_margin="15dp"
            android:stretchMode="columnWidth"
            android:numColumns="3"
            android:verticalSpacing="20dp"
            android:id="@+id/activity_addtext_gv_type"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>
        <RelativeLayout
            android:padding="5dp"
            android:gravity="center"
            android:layout_weight="2.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_alignParentTop="true"
                android:id="@+id/activity_addtext_btn_ok"
                android:paddingLeft="60dp"
                android:paddingRight="60dp"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:text="确定"
                android:background="@drawable/shape_type_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
