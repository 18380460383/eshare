<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/left_right_retract_small"
        android:paddingRight="@dimen/left_right_retract_small"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：" />

        <TextView
            android:id="@+id/more_order_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".243514316341634"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/more_order_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="20160405"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:padding="@dimen/left_right_retract_small">

        <LinearLayout
            android:id="@+id/ic_writer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView

                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_e_home_find_writer" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ic_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView

                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_e_home_weibo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ic_weixin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView

                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_e_home_weixin" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ic_reporter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView

                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_e_home_find_reporter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ic_media"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView

                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_e_home_meiti" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ic_redman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView

                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@mipmap/icon_e_home_find_redman" />
        </LinearLayout>












    </LinearLayout>

    <TextView
        style="@style/halving_line_e"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/left_right_listview_item_small"
        android:layout_marginRight="@dimen/left_right_listview_item_small"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/left_right_retract_small"
        android:paddingRight="@dimen/left_right_retract_small"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计："
            android:textSize="14dp" />

        <TextView
            android:id="@+id/more_medial_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="¥200.00"
            android:textColor="@color/en_order_m_money" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/more_medial_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:paddingBottom="3dp"
            android:paddingLeft="@dimen/left_right_retract_small"
            android:paddingRight="@dimen/left_right_retract_small"
            android:paddingTop="3dp"
            android:text="取消"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/more_play_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_huang_button"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="5dp"
            android:text="确认付款"
            android:textColor="@color/write"
            android:textSize="11dp" />
    </LinearLayout>
</LinearLayout>
