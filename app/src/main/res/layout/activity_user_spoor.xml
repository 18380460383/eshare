<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="16">
    <include
        android:id="@+id/user_spoor_title"
        layout="@layout/e_title"
        style="@style/TitleStyle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        style="@style/body_wigth"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/left_right_retract_small"
            android:layout_marginBottom="24dp">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/user_spoor_radio_button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:textColor="@drawable/select_spoor_textcolor"
                    android:background="@drawable/select_spoor_click"
                    android:text="我的转发"/>
                <RadioButton
                    android:id="@+id/user_spoor_radio_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="18dp"
                    android:paddingRight="18dp"
                    android:textColor="@drawable/select_spoor_textcolor"
                    android:background="@drawable/select_spoor_click"
                    android:text="我的评论"/>
            </RadioGroup>
        </RelativeLayout>
        <com.handmark.pulltorefresh.library.PullToRefreshListView
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:dividerHeight="0.5dp" />
    </LinearLayout>

</LinearLayout>
