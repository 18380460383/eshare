<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="16"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        style="@style/TitleStyle"
        layout="@layout/e_title" />

    <ScrollView
        android:layout_weight="14.5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/En_TextView"
                android:text="文章标题" />

            <EditText
                android:id="@+id/et_title"
                android:padding="6dp"
                android:gravity="top"
                android:hint="请在此处输入文章标题（30个字以内哦）"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_e_et_gray"
                android:textSize="15sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    style="@style/En_TextView"
                    android:text="投放时间"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:drawableRight="@mipmap/icon_e_calendar"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:id="@+id/tv_start_time"
                    android:padding="12dp"
                    android:text="2016-5-1"
                    android:background="@drawable/shape_e_et_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                style="@style/En_TextView"
                android:text="订单类型"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:button="@null"
                    android:drawablePadding="4dp"
                    android:drawableLeft="@drawable/selector_e_checkbox"
                    android:id="@+id/rb_straight"
                    android:text="直发"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:drawableLeft="@drawable/selector_e_checkbox"
                    android:button="@null"
                    android:drawablePadding="4dp"
                    android:id="@+id/rb_relay"
                    android:layout_marginLeft="20dp"
                    android:text="转发"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>

            <TextView
                android:text="媒体"
                style="@style/En_TextView" />

            <HorizontalScrollView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridView
                        android:id="@+id/gv_res"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_weibo_pic"
                style="@style/En_TextView"
                android:text="微博发图"/>

            <!--<GridView-->
                <!--android:padding="5dp"-->
                <!--android:id="@+id/gv_photo"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"/>-->

            <HorizontalScrollView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <GridView
                        android:padding="5dp"
                        android:id="@+id/gv_photo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:textColor="@android:color/darker_gray"
                android:id="@+id/tv_write_content"
                style="@style/En_TextView"
                android:text="发布内容" />

            <EditText
                android:hint="请填写本次发布内容（300字以内哦）"
                android:id="@+id/et_content"
                android:maxLength="300"
                android:padding="6dp"
                android:gravity="top"
                android:background="@drawable/shape_e_et_gray"
                android:layout_marginRight="12dp"
                android:layout_marginLeft="12dp"
                android:lines="5"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



            <TextView
                style="@style/En_TextView"
                android:text="资质文件(选填)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:padding="6dp"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/shape_e_et_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_margin="15dp"
                    android:id="@+id/iv_upload_res"
                    android:src="@mipmap/icon_upload_pic"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_margin="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/iv_upload_res"
                    android:text="若你推广的单品属于知名品牌，请务必上传该商品相关的资质文件"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>



        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:weightSum="5"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_money"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:gravity="center"
            android:background="#333239"
            android:text="共计: $ 8888"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_shopcar"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:text="加入购物车"
            android:padding="12dp"
            android:background="@color/orange"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
