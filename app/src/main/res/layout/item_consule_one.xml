<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="#ffffff">
    <ImageView
        android:id="@+id/consule_one_image"
        android:layout_width="86dp"
        android:layout_height="72dp"
        android:src="@mipmap/image_def"
        android:layout_marginTop="4dp"
        android:adjustViewBounds="true"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="4dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/consule_one_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textColor="#262626"
            android:text="小龙虾群被冲到岸边“染红”海水"/>
        <TextView
            android:id="@+id/consule_one_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:minLines="2"
            android:gravity="center_vertical"
            android:textSize="14dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:textColor="#959595"
            android:text="我们需要经常和用户打交道"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/consule_one_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:textColor="#959595"
                android:text="02-15 13-22"/>
            <TextView
                android:id="@+id/consule_one_hits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textSize="11dp"
                android:textColor="#959595"
                android:text="22"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
