<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginLeft="@dimen/left_right_retract_small"
            android:layout_marginRight="@dimen/left_right_retract_small"
            android:layout_weight="1"
            android:background="@color/halving_line" />

        <TextView
            android:id="@+id/fans_letter"
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginRight="@dimen/left_right_retract_small"
            android:background="@drawable/drawable_gray_spot"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/text_hei"
            android:textSize="13dp" />
        <TextView
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingLeft="6dp"
        android:paddingTop="10dp">

        <com.kzmen.sczxjf.view.RoundImageView
            android:id="@+id/fans_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/fans_niclname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="昵称" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/fans_ratio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:layout_weight="1.2"
            android:text="90%" />
    </LinearLayout>
</LinearLayout>
