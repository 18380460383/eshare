<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.kzmen.sczxjf.ui.activity.kzmessage.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/kz_title" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/margin_top30">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top20"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="手机号"
                android:textColor="@color/seprate"
                android:textStyle="bold" />


            <EditText
                android:inputType="number"
                android:layout_marginLeft="8dp"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint=""
                android:textSize="14dp" />

        </LinearLayout>

        <View
            style="@style/bottom_line_gloom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="验证码"
                android:textColor="@color/seprate"
                android:textStyle="bold" />


            <EditText
                android:layout_marginLeft="8dp"
                android:id="@+id/ev_yz"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint=""
                android:textSize="14dp" />


            <TextView
                android:id="@+id/tv_yz"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="发送验证码" />
        </LinearLayout>

        <View
            style="@style/bottom_line_gloom" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="设置密码"
                android:textColor="@color/seprate"
                android:textStyle="bold" />


            <EditText
                android:inputType="textPassword"
                android:layout_marginLeft="8dp"
                android:id="@+id/et_pass"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:hint=""
                android:textSize="14dp" />


            <ImageView
                android:id="@+id/iv_show"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:background="@drawable/btn_play"
                android:gravity="center"
                android:padding="8dp" />
        </LinearLayout>

        <View
            style="@style/bottom_line_gloom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_top30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="邀请码："
                android:textColor="@color/seprate"
                android:textStyle="normal" />

            <EditText
                android:layout_marginLeft="8dp"
                android:id="@+id/et_yq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textSize="14dp" />

        </LinearLayout>

        <View
            style="@style/bottom_line_gloom" />

        <TextView
            android:id="@+id/tv_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="@dimen/margin_top30"
            android:background="@drawable/kz_bg_yellow_line"
            android:gravity="center"
            style="@style/login_text"
            android:text="注册" />
    </LinearLayout>

</LinearLayout>
