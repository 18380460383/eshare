<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@color/write"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/left_right_retract_small"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/weixin_select"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/option"/>
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="8dp"
            android:src="@mipmap/icon_e_home_weixin"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_hei"
                    android:textSize="13dp"
                    android:text="投放位置："/>
                <TextView
                    android:id="@+id/weixin_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/text_hei"
                    android:textSize="13dp"
                    android:text="第二条"/>
            </LinearLayout> <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="标题："/>
                <TextView
                    android:id="@+id/weixin_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12dp"
                    android:text="第二条"/>
            </LinearLayout> <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="媒体："/>
                <TextView
                    android:id="@+id/weixin_media"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="12dp"
                    android:text="第二条"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <TextView
        style="@style/halving_line_e"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/left_right_listview_item_small"
        android:layout_marginRight="@dimen/left_right_listview_item_small"
        android:layout_marginTop="@dimen/left_right_listview_item_small"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/left_right_retract_small"
        android:paddingRight="@dimen/left_right_retract_small"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/weixin_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:textColor="@color/orange"
            android:text="¥200.00"/>
        <TextView
            android:id="@+id/weixin_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/left_right_retract_small"
            android:paddingRight="@dimen/left_right_retract_small"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textSize="12dp"
            android:background="@drawable/select_click"
            android:layout_alignParentRight="true"
            android:text="删除"/>
    </RelativeLayout>
</LinearLayout>
