<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/write"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/left_right_retract_small"
        android:paddingRight="@dimen/left_right_retract_small"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号：" />

        <TextView
            android:id="@+id/weixin_orderid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".243514316341634"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/weixin_order_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="12dp"
            android:text="20160405" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/left_right_retract_small"
            android:src="@mipmap/icon_e_home_weixin" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投放位置："
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/weixin_position"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题："
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/weixin_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="媒体："
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/weixin_media"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="暂无"
                    android:textSize="13dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/halving_line_e"
        android:layout_height="2px"
        android:layout_marginLeft="@dimen/left_right_listview_item_small"
        android:layout_marginRight="@dimen/left_right_listview_item_small"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="@dimen/left_right_retract_small"
        android:paddingRight="@dimen/left_right_retract_small"
        android:paddingTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共计："
            android:textSize="14dp" />

        <TextView
            android:id="@+id/weixin_order_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="¥200.00"
            android:textColor="@color/en_order_m_money" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/weixin_order_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:paddingBottom="3dp"
            android:paddingLeft="@dimen/left_right_retract_small"
            android:paddingRight="@dimen/left_right_retract_small"
            android:paddingTop="3dp"
            android:text="取消"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/weixin_order_play_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/drawable_huang_button"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="5dp"
            android:text="确认付款"
            android:textColor="@color/write"
            android:textSize="11dp" />
    </LinearLayout>
</LinearLayout>
